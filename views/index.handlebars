<h1>Eat The Burger!</h1>

<h2>Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Type:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    {{!-- <label for="devoured">Hungry?</label><br> --}}
    {{!-- <input type="radio" name="devoured" value="1"> Devour!<br> --}}
    {{!-- <input type="radio" name="devoured" value="0" checked> For later? --}}
  </div>

  <button type="submit">Add Burger</button>
</form>
